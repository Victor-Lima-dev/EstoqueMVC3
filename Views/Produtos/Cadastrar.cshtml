@model Produto

@{
    ViewData["Title"] = "Cadastrar Produto";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>
    
    <form asp-action="CadastrarT" method="post">
        
        <div class="form-group">
            <label asp-for="Nome"></label>
            <input asp-for="Nome" class="form-control" />
        </div>
        
        <div class="form-group">
            <label asp-for="Descricao"></label>
            <textarea asp-for="Descricao" class="form-control"></textarea>
        </div>
        
        <div class="form-group">
            <label asp-for="Preco"></label>
            <input asp-for="Preco" class="form-control" />
        </div>
        
        <div class="form-group">
            <label asp-for="DataCadastro"></label>
            <input asp-for="DataCadastro" class="form-control" value="@DateTime.Now" />
        </div>
        
        <div class="form-group">
            <label asp-for="Categoria"></label>
            <select asp-for="Categoria" asp-items="@(new SelectList(ViewData["Categorias"] as List<string>))" class="form-control"></select>
        </div>
        
        <button type="submit" class="btn btn-primary">Salvar</button>
    </form>
</div>