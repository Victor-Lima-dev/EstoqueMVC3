@model ItemEstoque

<h1>Editar Item de Estoque</h1>

<form asp-action="Editar" asp-route-id="@Model.ItemEstoqueId" method="post">
    <div class="form-group">
        <input type="hidden" asp-for="@Model.EstoqueId">
        <input type="hidden" asp-for="@Model.ItemEstoqueId">

        <label asp-for="ProdutoId">Produto</label>
        <select asp-for="ProdutoId" class="form-control">
            @foreach (var produto in ViewData["Produtos"] as IEnumerable<Produto>)
            {
                <option value="@produto.ProdutoId">@produto.Nome</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Descricao">Descrição</label>
        <input asp-for="Descricao" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Quantidade">Quantidade</label>
        <input asp-for="Quantidade" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Validade">Validade</label>
        <input asp-for="Validade" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>